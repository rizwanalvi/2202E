@model WebMVC008.Models.Student
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" action="/home/Edit">
            <div class="form-group">
                <input type="hidden" name="ID" value="@Model.ID" class="form-control" />
                <input type="text" name="STDNAME" value="@Model.STDNAME" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="BATCH" value="@Model.BATCH" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="SEM" value="@Model.SEM" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" name="btnUpdate" value="Update" class="btn btn-success" />
            </div>
        </form>
</div>
    <div class="col-md-4"></div>
</div>